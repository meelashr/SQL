--Joining two tables
SELECT * FROM "CharlotteChaze/BreakIntoTech"."netflix_people"
LEFT JOIN "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
ON "netflix_people"."show_id"="netflix_titles_info"."show_id";

--How many movie titles are there in the database? (movies only, not tv shows)
SELECT COUNT(*) FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
WHERE Type = 'Movie';

--When was the most recent batch of tv shows and/or movies added to the database?
SELECT max(date_added) FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info";

--List all the movies and tv shows in alphabetical order.
SELECT title FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
ORDER BY title asc;

--Who was the Director for the movie Bright Star?
SELECT director FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info" titles
LEFT JOIN "CharlotteChaze/BreakIntoTech"."netflix_people" people
ON titles.show_id=people.show_id
WHERE titles.title ='Bright Star'

--What is the oldest movie in the database and what year was it madeSELECT title, release_year
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info" 
WHERE type = 'Movie'
AND release_year =
(SELECT min(release_year)
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
WHERE type = 'Movie');






